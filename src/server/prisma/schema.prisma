generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String @id @default(uuid())
  username String @unique @default("")
  email    String @unique @default("")
  password String @default("")
}

model Reader {
  id              String   @id @default(uuid())
  username        String   @default("")
  email           String   @unique @default("")
  password        String   @default("")
  followedAuthors Author[] @relation("FollowedAuthors")
}

model Author {
  id              String    @id @default(uuid())
  username        String    @default("")
  email           String    @unique @default("")
  password        String    @default("")
  followedReaders Reader[]  @relation("FollowedAuthors")
  articles        Article[]
  Comment         Comment[]
}

model Article {
  id            String       @id @default(uuid())
  title         String       @default("")
  description   String       @default("")
  author        Author       @relation(fields: [authorId], references: [id])
  authorId      String
  comments      Comment[]
  ArticleList   ArticleList? @relation(fields: [articleListId], references: [id])
  articleListId String?
}

model ArticleList {
  id       String    @id @default(uuid())
  name     String    @default("")
  articles Article[]
}

model Reaction {
  id       String @id @default(uuid())
  iconType Int    @default(0)
}

model Comment {
  id        String  @id @default(uuid())
  content   String  @default("")
  author    Author  @relation(fields: [authorId], references: [id])
  authorId  String
  article   Article @relation(fields: [articleId], references: [id])
  articleId String
}
